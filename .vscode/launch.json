    "version": "0.2.0",
    "configurations": [
        {
            "name": "Photomaker multi Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/photomaker_multi_adapter2_debug.py",
            "args": [
                "--multi_ip_adapter",
                "--clip_h",
            ],
            "env": {"CUDA_VISIBLE_DEVICES":"3"},
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Photomaker adapter Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_animate.py",
            "args": [
                "-i",
                "datasets/benchmark_dataset/person_3",
                "--name",
                "person_3",
                "-o",
                "photomaker_adapter",
                "--ip_adapter",
            ],
            "console": "integratedTerminal",
            "justMyCode": false ,
        },
        {
            "name": "Anno Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/preprocess.py",
            "args": [
                "--root",
                "datasets/CeleV-Text",
            ],
            "env": {"CUDA_VISIBLE_DEVICES":"3"},
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Train Debug",
            "type": "python",
            "request": "launch",
            "module": "accelerate.commands.launch",
            "args": [
                "--mixed_precision", "fp16",
                "train.py",
                "--pretrained_model_name_or_path", "./pretrain_model/RealVisXL_V4.0",
                "--train_data_dir", "datasets/CeleV-Text",
                "--checkpointing_steps=1000",
                "--output_dir", "checkpoints/",
                "--checkpoints_total_limit=50",
                "--train_batch_size=1",
                "--num_train_epochs=100",
                "--gradient_accumulation_steps=4",
                "--gradient_checkpointing",
                "--learning_rate=1e-4",
                // "--with_vae",

            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "env": {"CUDA_VISIBLE_DEVICES":"4"},
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}